<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_user_recent_media_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/media_card_view_margin"
    android:layout_marginLeft="@dimen/media_card_view_margin"
    android:layout_marginRight="@dimen/media_card_view_margin"
    android:layout_marginStart="@dimen/media_card_view_margin">

    <GridView
        android:id="@+id/images_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/media_grid_view_column_width"
        android:gravity="center"
        android:horizontalSpacing="@dimen/media_grid_view_spacing"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="@dimen/media_grid_view_spacing" />
</android.support.v7.widget.CardView>