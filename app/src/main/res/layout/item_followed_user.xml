<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/followed_user_image_view"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginEnd="@dimen/image_View_margin"
            android:layout_marginLeft="@dimen/image_View_margin"
            android:layout_marginRight="@dimen/image_View_margin"
            android:layout_marginStart="@dimen/image_View_margin"
            android:contentDescription="@string/profile_image" />

        <TextView
            android:id="@+id/followed_user_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="@dimen/large_text" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/followed_user_horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/followed_user_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:orientation="horizontal" />
    </HorizontalScrollView>
</LinearLayout>